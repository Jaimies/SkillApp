<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/border_radius_50_percent" />
            <gradient
                android:endColor="#3B6639"
                android:startColor="#EAD442" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/progressbar_gradient_width"
        android:left="@dimen/progressbar_gradient_width"
        android:right="@dimen/progressbar_gradient_width"
        android:top="@dimen/progressbar_gradient_width">
        <shape>
            <corners android:radius="@dimen/border_radius_50_percent" />
            <solid android:color="@color/white_100" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/border_radius_50_percent" />
                <gradient
                    android:endColor="#3B6639"
                    android:startColor="#EAD442" />
            </shape>
        </clip>
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.jdevs.timeo.ui.activities.ActivityViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_default"
        android:onClick="@{() -> viewModel.navigateToDetails()}"
        android:orientation="vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activities_item_height"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@{viewModel.name}"
                android:textAppearance="@style/TextAppearance.Timeo.Headline4"
                app:layout_constraintEnd_toStartOf="@+id/total_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Activity name" />

            <TextView
                android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/margin_small"
                android:paddingEnd="@dimen/margin_small"
                android:text="@{viewModel.totalTime}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                app:layout_constraintEnd_toStartOf="@+id/plus_button"
                tools:text="820h" />

            <ImageButton
                android:id="@+id/plus_button"
                android:layout_width="@dimen/activities_plus_button_size"
                android:layout_height="@dimen/activities_plus_button_size"
                android:background="@drawable/activities_item_plus_button"
                android:onClick="@{() -> viewModel.showRecordDialog()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_tiny">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.prevMilestone}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                tools:text="0h" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.nextMilestone}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    tools:text="25h" />
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:progress="@{viewModel.gradientPercentage}"
            android:progressDrawable="@drawable/activity_progressbar"
            tools:progress="65" />
    </LinearLayout>
</layout>
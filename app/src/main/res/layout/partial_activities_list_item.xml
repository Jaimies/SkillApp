<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="@dimen/activities_item_height"
    android:layout_marginBottom="@dimen/activities_item_margin"
    android:background="@drawable/activities_list_item_background_red"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/activities_item_padding"
    android:paddingEnd="@dimen/activities_item_padding" >

    <TextView
        android:id="@+id/listItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textStyle="bold"
        tools:text="Activity name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end|center_vertical">

        <ImageButton
            android:id="@+id/plusButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/activities_list_plus_button_red"
            tools:ignore="ContentDescription" />
    </LinearLayout>

</LinearLayout>
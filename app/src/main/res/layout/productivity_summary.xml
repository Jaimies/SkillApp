<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="summary"
            type="com.maxpoliakov.skillapp.model.ProductivitySummary" />
    </data>

    <LinearLayout
        android:id="@+id/productivity_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/total"
            layout="@layout/time_with_label"
            app:label="@{@string/total}"
            app:time="@{summary.totalTime}" />

        <include
            android:id="@+id/per_week"
            layout="@layout/time_with_label"
            app:label="@{@string/per_week}"
            app:time="@{summary.averageWeekTime}" />

        <include
            android:id="@+id/last_week"
            layout="@layout/time_with_label"
            app:label="@{@string/last_week}"
            app:time="@{summary.lastWeekTime}" />
    </LinearLayout>
</layout>

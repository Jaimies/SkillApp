<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="summary"
            type="com.maxpoliakov.skillapp.model.ProductivitySummary" />
    </data>

    <merge>

        <LinearLayout
            android:id="@+id/productivity_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="30dp">

            <include
                android:id="@+id/today"
                layout="@layout/time_with_label"
                app:label="@{@string/today_lowercase}"
                app:time="@{summary.timeToday}" />

            <include
                android:id="@+id/total"
                layout="@layout/time_with_label"
                app:label="@{@string/total}"
                app:time="@{summary.totalTime}" />

            <include
                android:id="@+id/last_week"
                layout="@layout/time_with_label"
                app:label="@{@string/last_week}"
                app:time="@{summary.lastWeekTime}" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/dividerHorizontal" />
    </merge>
</layout>

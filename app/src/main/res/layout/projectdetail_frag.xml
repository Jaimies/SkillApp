<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.jdevs.timeo.ui.projectdetail.ProjectDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_default"
        android:paddingEnd="@dimen/padding_default"
        tools:context=".ui.projectdetail.ProjectDetailFragment">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{viewModel.name}"
            android:textAppearance="@style/TextAppearance.Timeo.Headline1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="The Timeo" />

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.description}"
            android:textAppearance="@style/TextAppearance.Timeo.Body2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:text="The best time management app ever" />

        <TextView
            android:id="@+id/per_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@{viewModel.avgWeekTime}"
            android:textAppearance="@style/TextAppearance.Timeo.Headline3"
            app:layout_constraintEnd_toEndOf="@id/per_week_label"
            app:layout_constraintStart_toStartOf="@id/per_week_label"
            app:layout_constraintTop_toBottomOf="@id/description"
            tools:text="40h" />

        <TextView
            android:id="@+id/per_week_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/per_week"
            android:textAppearance="@style/TextAppearance.Timeo.Body1"
            app:layout_constraintEnd_toStartOf="@+id/days_spent_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/per_week" />

        <TextView
            android:id="@+id/days_spent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@{viewModel.daysSpent}"
            android:textAppearance="@style/TextAppearance.Timeo.Headline3"
            app:layout_constraintEnd_toEndOf="@id/days_spent_label"
            app:layout_constraintStart_toStartOf="@id/days_spent_label"
            app:layout_constraintTop_toBottomOf="@id/description"
            tools:text="21" />

        <TextView
            android:id="@+id/days_spent_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/days"
            android:textAppearance="@style/TextAppearance.Timeo.Body1"
            app:layout_constraintEnd_toStartOf="@id/last_week_label"
            app:layout_constraintStart_toEndOf="@id/per_week_label"
            app:layout_constraintTop_toBottomOf="@id/days_spent" />

        <TextView
            android:id="@+id/last_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@{viewModel.lastWeekTime}"
            android:textAppearance="@style/TextAppearance.Timeo.Headline3"
            app:layout_constraintEnd_toEndOf="@id/last_week_label"
            app:layout_constraintStart_toStartOf="@id/last_week_label"
            app:layout_constraintTop_toBottomOf="@id/description"
            tools:text="56h" />

        <TextView
            android:id="@+id/last_week_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/last_week"
            android:textAppearance="@style/TextAppearance.Timeo.Body1"
            app:layout_constraintEnd_toStartOf="@+id/total_time_label"
            app:layout_constraintStart_toEndOf="@+id/days_spent_label"
            app:layout_constraintTop_toBottomOf="@id/last_week" />

        <TextView
            android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@{viewModel.totalTime}"
            android:textAlignment="textEnd"
            android:textAppearance="@style/TextAppearance.Timeo.Headline3"
            app:layout_constraintEnd_toEndOf="@id/total_time_label"
            app:layout_constraintStart_toStartOf="@id/total_time_label"
            app:layout_constraintTop_toBottomOf="@id/description"
            tools:text="830.6h" />

        <TextView
            android:id="@+id/total_time_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/total"
            android:textAppearance="@style/TextAppearance.Timeo.Body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/last_week_label"
            app:layout_constraintTop_toBottomOf="@id/total_time" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/info_barrier"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="total_time_label,last_week_label,per_week_label" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:onClick="@{() -> viewModel.showRecordDialog()}"
            android:text="@string/add_record"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info_barrier" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.jdevs.timeo.viewmodels.RecordViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/records_list_item_height"
        android:paddingStart="@dimen/default_margin"
        android:paddingEnd="@dimen/default_margin">

        <!--suppress AndroidUnknownAttribute -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:onLongClick="@{(view) -> viewmodel.navigator.deleteRecord(view)}"
            android:singleLine="true"
            android:text="@{viewmodel.name}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintEnd_toStartOf="@+id/time_text_view"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Activity name" />

        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@{viewmodel.time}"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="25m" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
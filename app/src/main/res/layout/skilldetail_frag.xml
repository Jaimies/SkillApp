<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.skilldetail.SkillDetailFragment">

    <data>

        <variable
            name="viewModel"
            type="com.maxpoliakov.skillapp.ui.skilldetail.SkillDetailViewModel" />

        <import type="com.maxpoliakov.skillapp.R" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="14dp"
            app:cardCornerRadius="@dimen/default_corner_radius"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:singleLine="true"
                    android:text="@{viewModel.state.name}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                    app:layout_constraintEnd_toStartOf="@id/header_time_barrier"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Programming" />

                <TextView
                    android:id="@+id/total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="24dp"
                    android:text="@{@string/hours(viewModel.state.totalTime)}"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/header_time_barrier"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="820h" />

                <TextView
                    android:id="@+id/total_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:text="@string/total"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    app:layout_constraintEnd_toEndOf="@id/total_time"
                    app:layout_constraintStart_toStartOf="@id/header_time_barrier"
                    app:layout_constraintTop_toBottomOf="@id/total_time" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/header_time_barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="left"
                    app:constraint_referenced_ids="total_time,total_label" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/header_barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="total_label,title,total_time" />

                <TextView
                    android:id="@+id/per_week_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/per_week"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    app:layout_constraintEnd_toStartOf="@id/last_week_label"
                    app:layout_constraintStart_toEndOf="@id/days_spent_label"
                    app:layout_constraintTop_toBottomOf="@id/per_week" />

                <TextView
                    android:id="@+id/per_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/hours(viewModel.state.avgWeekTime)}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintBottom_toTopOf="@id/per_week_label"
                    app:layout_constraintEnd_toEndOf="@id/per_week_label"
                    app:layout_constraintStart_toStartOf="@id/per_week_label"
                    app:layout_constraintTop_toBottomOf="@id/total_label"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="4h" />

                <TextView
                    android:id="@+id/last_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/hours(viewModel.state.lastWeekTime)}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintBottom_toTopOf="@id/last_week_label"
                    app:layout_constraintEnd_toEndOf="@id/last_week_label"
                    app:layout_constraintStart_toStartOf="@id/last_week_label"
                    app:layout_constraintTop_toBottomOf="@id/header_barrier"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="56h" />

                <TextView
                    android:id="@+id/last_week_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_week"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/per_week_label"
                    app:layout_constraintTop_toBottomOf="@id/last_week" />

                <TextView
                    android:id="@+id/days_spent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.state.daysSpent}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    app:layout_constraintBottom_toTopOf="@id/days_spent_label"
                    app:layout_constraintEnd_toEndOf="@id/days_spent_label"
                    app:layout_constraintStart_toStartOf="@id/days_spent_label"
                    app:layout_constraintTop_toBottomOf="@id/header_barrier"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="120" />

                <TextView
                    android:id="@+id/days_spent_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/days"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    app:layout_constraintEnd_toStartOf="@id/per_week_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/days_spent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="@dimen/default_corner_radius"
            app:layout_constraintTop_toBottomOf="@id/topbar">

            <include
                android:id="@+id/chart"
                layout="@layout/chart" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="16dp"
            android:onClick="@{() -> viewModel.showRecordDialog()}"
            android:text="@string/add_a_record"
            android:textColor="?android:attr/textColorPrimary"
            app:icon="@drawable/ic_plus_24dp"
            app:iconTint="?android:attr/textColorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

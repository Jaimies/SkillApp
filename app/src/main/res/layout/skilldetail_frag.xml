<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.skilldetail.SkillDetailFragment">

    <data>

        <variable
            name="viewModel"
            type="com.maxpoliakov.skillapp.ui.skilldetail.SkillDetailViewModel" />

        <import type="com.maxpoliakov.skillapp.util.stopwatch.StopwatchState" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/collapsing_toolbar_layout"
            layout="@layout/collapsing_toolbar"
            app:title="@{viewModel.skillLiveData.name}" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/summary"
                    layout="@layout/productivity_summary_without_title"
                    app:summary="@{viewModel.summary}" />

                <include
                    layout="@layout/skilldetail_action_buttons"
                    app:viewModel="@{viewModel}" />

                <include
                    android:id="@+id/stopwatch_banner"
                    layout="@layout/skilldetail_stopwatch_banner"
                    app:isActive="@{viewModel.stopwatchIsRunning}"
                    app:startTime="@{viewModel.stopwatchStartTime}" />

                <include
                    android:id="@+id/productivity_chart"
                    layout="@layout/chart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/chart_height"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="70dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.skilldetail.SkillDetailFragment">

    <data>

        <variable
            name="viewModel"
            type="com.maxpoliakov.skillapp.ui.skilldetail.SkillDetailViewModel" />

        <import type="com.maxpoliakov.skillapp.domain.model.StopwatchState" />

        <import type="com.maxpoliakov.skillapp.util.ui.FormattingKt" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="@string/skill_transition_name">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/title_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="25dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/name"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:paddingStart="@dimen/productivity_summary_spacing_start"
                    android:text="@={viewModel.name}"
                    android:textAppearance="@style/TextAppearance.SkillApp.ProductivitySummaryTitle"
                    tools:text="Programming" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/goal_text_input"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="46dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/initial_time_edit_text">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:onClick="@{() -> viewModel.chooseGoal()}"
                        android:text="@{FormattingKt.formatGoal(context, viewModel.goal)}" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/data_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/summary"
                        layout="@layout/productivity_summary_without_title"
                        app:summary="@{viewModel.summary}" />

                    <include
                        layout="@layout/skilldetail_action_buttons"
                        app:viewModel="@{viewModel}" />

                    <include
                        android:id="@+id/stopwatch_banner"
                        layout="@layout/skilldetail_stopwatch_banner"
                        app:isActive="@{viewModel.stopwatchIsRunning}"
                        app:startTime="@{viewModel.stopwatchStartTime}" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        app:contentPaddingBottom="30dp"
                        app:contentPaddingLeft="24dp"
                        app:contentPaddingRight="24dp"
                        app:contentPaddingTop="30dp"
                        app:visible="@{viewModel.skillLiveData.goal != null}">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{FormattingKt.formatGoal(context, viewModel.skillLiveData.goal, viewModel.timeToday)}"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                                android:textSize="19sp" />

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:max="100000"
                                android:progress="@{viewModel.goalPercentage}" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <include
                        android:id="@+id/productivity_chart"
                        layout="@layout/bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/chart_height"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="70dp"
                        app:data="@{viewModel.chartData}"
                        app:goal="@{viewModel.skillLiveData.goal}" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/save_fab"
            style="@style/Widget.SkillApp.ExtendedFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="24dp"
            android:enabled="@{viewModel.inputIsValid}"
            android:onClick="@{() -> viewModel.save()}"
            android:paddingStart="20dp"
            android:text="@string/save"
            app:elevation="16dp" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>

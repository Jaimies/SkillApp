<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list"
    app:startDestination="@id/activities_fragment_dest"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/activities_fragment_dest"
        android:name="com.jdevs.timeo.ui.activities.ActivitiesFragment"
        android:label="@string/your_activities"
        tools:layout="@layout/activities_frag">

        <action
            android:id="@+id/action_activitiesFragment_to_activityDetailsFragment"
            app:destination="@id/activity_detail_fragment_dest"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_activitiesFragment_to_historyFragment"
            app:destination="@id/history_fragment_dest"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_activitiesFragment_to_addEditActivityFragment"
            app:destination="@id/add_edit_activity_fragment_dest"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/history_fragment_dest"
        android:name="com.jdevs.timeo.ui.activities.HistoryFragment"
        android:label="@string/history"
        tools:layout="@layout/history_frag" />

    <fragment
        android:id="@+id/add_edit_activity_fragment_dest"
        android:name="com.jdevs.timeo.ui.activities.AddEditActivityFragment"
        tools:layout="@layout/addtask_frag">

        <argument
            android:name="activity"
            android:defaultValue="@null"
            app:argType="com.jdevs.timeo.data.Task"
            app:nullable="true" />

        <argument
            android:name="id"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />

        <argument
            android:name="isEdited"
            android:defaultValue="false"
            app:argType="boolean" />

        <action
            android:id="@+id/action_addEditFragment_to_activityDetailFragment"
            app:destination="@id/activity_detail_fragment_dest"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/activity_detail_fragment_dest"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_addEditFragment_to_activitiesFragment"
            app:destination="@id/activities_fragment_dest"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/activities_fragment_dest"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/activity_detail_fragment_dest"
        android:name="com.jdevs.timeo.ui.activities.ActivityDetailFragment"
        android:label="@string/activity_details"
        tools:layout="@layout/activitydetail_frag">

        <argument
            android:name="activity"
            app:argType="com.jdevs.timeo.data.Task" />

        <argument
            android:name="id"
            app:argType="string" />

        <action
            android:id="@+id/action_activityDetailFragment_to_addEditActivityFragment"
            app:destination="@id/add_edit_activity_fragment_dest"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
</navigation>
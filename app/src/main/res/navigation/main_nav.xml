<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.jdevs.timeo.HomeFragment"
        android:label="Timeo - home "
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/viewCreateActivityFragment"
            app:destination="@id/addActivityFragment" />
    </fragment>
    <fragment
        android:id="@+id/statsFragment"
        android:name="com.jdevs.timeo.StatsFragment"
        android:label="Stats"
        tools:layout="@layout/fragment_stats" >
        <action
            android:id="@+id/viewAchievements"
            app:destination="@id/showAchievementsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addActivityFragment"
        android:name="com.jdevs.timeo.CreateActivityFragment"
        android:label="Add Activity"
        tools:layout="@layout/fragment_create_activity" />
    <fragment
        android:id="@+id/showHistoryFragment"
        android:name="com.jdevs.timeo.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.jdevs.timeo.TaskListFragment"
        android:label="List of tasks"
        tools:layout="@layout/fragment_task_list" />
    <fragment
        android:id="@+id/showAchievementsFragment"
        android:name="com.jdevs.timeo.AchievementsFragment"
        android:label="My achievements" />
    <fragment
        android:id="@+id/showActivityFragment"
        android:name="com.jdevs.timeo.ActivityDetailsFragment"
        android:label="fragment_show_activity"
        tools:layout="@layout/fragment_activity_details" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.jdevs.timeo.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
</navigation>
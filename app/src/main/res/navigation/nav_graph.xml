<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.jdevs.timeo.HomeFragment"
        android:label="Timeo - home "
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/viewCreateActivityFragment"
            app:destination="@id/createActivityFragment" />

        <action
            android:id="@+id/action_showActivityDetails"
            app:destination="@id/activityDetailsFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_showHistory"
            app:destination="@id/historyFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_showCreateActivityFragment"
            app:destination="@id/createActivityFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_login"
            app:destination="@id/login_nav"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/statsFragment"
        android:name="com.jdevs.timeo.StatsFragment"
        android:label="Stats"
        tools:layout="@layout/fragment_stats">
        <action
            android:id="@+id/showAchievements"
            app:destination="@id/achievementsFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/createActivityFragment"
        android:name="com.jdevs.timeo.CreateActivityFragment"
        tools:layout="@layout/fragment_create_activity">
        <argument
            android:name="editActivity"
            android:defaultValue="false"
            app:argType="boolean" />

        <argument
            android:name="activityId"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="activityTitle"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="activityIcon"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_returnToActivityDetails"
            app:destination="@id/activityDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/activityDetailsFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_returnToHomeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/activityDetailsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.jdevs.timeo.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.jdevs.timeo.TaskListFragment"
        android:label="List of tasks"
        tools:layout="@layout/fragment_task_list">
        <action
            android:id="@+id/action_showActivityDetails"
            app:destination="@id/activityDetailsFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_showHistory"
            app:destination="@id/historyFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_showCreateActivityFragment"
            app:destination="@id/createActivityFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/achievementsFragment"
        android:name="com.jdevs.timeo.AchievementsFragment"
        android:label="My achievements" />
    <fragment
        android:id="@+id/activityDetailsFragment"
        android:name="com.jdevs.timeo.ActivityDetailsFragment"
        android:label="Activity details"
        tools:layout="@layout/fragment_activity_details">
        <argument
            android:name="activityTitle"
            app:argType="string" />
        <argument
            android:name="activityIcon"
            app:argType="string" />
        <argument
            android:name="activityId"
            app:argType="string" />
        <action
            android:id="@+id/action_editActivity"
            app:destination="@id/createActivityFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <include
        app:graph="@navigation/login_nav"/>
</navigation>
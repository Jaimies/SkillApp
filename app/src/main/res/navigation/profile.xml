<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    app:startDestination="@id/profile_fragment_dest"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/profile_fragment_dest"
        android:name="com.jdevs.timeo.ui.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/profile_frag">

        <action
            android:id="@+id/action_profileFragment_to_signInFragment"
            app:destination="@id/sign_in_fragment_dest"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/sign_in_fragment_dest"
        android:name="com.jdevs.timeo.ui.profile.SignInFragment"
        android:label="@string/sign_in"
        tools:layout="@layout/signup_frag">

        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/sign_up_fragment_dest"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/sign_up_fragment_dest"
        android:name="com.jdevs.timeo.ui.profile.SignUpFragment"
        android:label="@string/sign_up">

        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/sign_in_fragment_dest"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/profile_fragment_dest"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>
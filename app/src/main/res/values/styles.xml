<resources>

    <style name="Theme.Timeo" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="spinBars">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPreloaderBackground">@color/colorPreloaderBackground</item>
        <item name="topbarHeight">@dimen/topbar_height_minimized</item>
        <item name="topbarMonthDayTextAppearance">
            @style/TextAppearance.MaterialComponents.Headline4
        </item>
    </style>

    <style name="Theme.Timeo.Splash">
        <item name="android:windowBackground">@drawable/ic_launcher</item>
    </style>

    <style name="Widget" />

    <style name="Widget.Timeo" />

    <style name="Widget.Timeo.BottomNavigationView">
        <item name="android:visibility">gone</item>
    </style>

    <style name="Widget.Timeo.Preloader">
        <item name="android:background">?attr/colorPreloaderBackground</item>
    </style>

    <style name="Widget.Timeo.NavHeader">
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="Widget.Timeo.Topbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:layout_height">?attr/topbarHeight</item>
    </style>

    <style name="Widget.Timeo.TopbarMonthDay">
        <item name="android:textAppearance">?attr/topbarMonthDayTextAppearance</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:format12Hour">dd</item>
        <item name="android:format24Hour">dd</item>
    </style>

    <style name="Widget.Timeo.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
    </style>

    <style name="Widget.Timeo.LinkTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
    </style>

    <style name="Widget.Timeo.LoginTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5
        </item>
    </style>

    <style name="Widget.Timeo.LoginLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <declare-styleable name="Theme.Timeo">
        <attr name="colorPreloaderBackground" format="color" />
        <attr name="topbarHeight" format="dimension" />
        <attr name="topbarMonthDayTextAppearance" format="reference" />
    </declare-styleable>
</resources>

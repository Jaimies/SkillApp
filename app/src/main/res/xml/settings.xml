<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/general"
        app:iconSpaceReserved="false">
        <ListPreference
            android:defaultValue="Auto"
            android:entries="@array/theme_entries"
            android:entryValues="@array/theme_values"
            android:icon="@drawable/ic_palette"
            android:key="theme"
            android:title="@string/theme"
            app:useSimpleSummaryProvider="true" />

        <Preference
            android:icon="@drawable/ic_drive_translucent"
            android:key="backups"
            android:title="@string/backups" />

        <Preference
            android:icon="@drawable/ic_star"
            android:key="premium"
            android:title="@string/skillapp_premium" />

        <Preference
            android:key="premium_ad"
            android:summary="Watch an ad to get free access to SkillApp Premium for a day"
            android:title="Get Premium free for a for a day"
            app:icon="@drawable/ic_ad" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/about"
        app:iconSpaceReserved="false">
        <Preference
            android:icon="@drawable/ic_lock"
            android:title="@string/privacy_policy">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/privacy_policy_url" />
        </Preference>
        <Preference
            android:icon="@drawable/ic_flag"
            android:title="@string/open_source_licences">
            <intent
                android:action="android.intent.action.VIEW"
                android:targetClass="com.google.android.gms.oss.licenses.OssLicensesMenuActivity"
                android:targetPackage="com.maxpoliakov.skillapp" />
        </Preference>

        <Preference
            android:icon="@drawable/ic_thumb_up"
            android:title="@string/rate_the_app">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/market_uri" />
        </Preference>

        <Preference
            android:icon="@drawable/ic_message"
            android:title="@string/contact_developer">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/mail_dev_uri" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>

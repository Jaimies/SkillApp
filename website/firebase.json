{
  "hosting": {
    "public": "firebase-hosting-root",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "https://theskillapp.com/",
        "type": 301
      },
      {
        "source": "/:path",
        "destination": "https://theskillapp.com/:path",
        "type": 301
      }
    ]
  }
}
